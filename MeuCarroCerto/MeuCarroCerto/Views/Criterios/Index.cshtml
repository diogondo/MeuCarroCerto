@model IEnumerable<MeuCarroCerto.Models.t_criterios>

@{
    ViewBag.Title = "Critérios";
}
@{
    Layout = null;
}

<legend>CRITÉRIOS</legend>
<p>
    @Html.ActionLink("Adicionar critérios", "Adicionar", null, new { @class = "btn btn-primary" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("Código")
        </th>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
              <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.codigo }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.codigo })
            </td>
        </tr>
    }

</table>
