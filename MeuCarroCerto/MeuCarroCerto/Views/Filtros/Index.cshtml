@model MeuCarroCerto.Models.Filtros
@{
    ViewBag.Title = "Filtros";
}
<p><b><font size="4">Selecione dentre as opções, o que o veículo desejado deve contemplar.</font></b></p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
           
            @Html.Label("Quantidade de ocupantes")
        </div>
         <div class="editor-field">
            
            @Html.DropDownListFor(model => model.qtd_ocupante, (SelectList)ViewBag.qtd)
        </div>

        <div class="editor-label">
            @Html.Label("Tipo de carroceria")
        </div>
        <div class="editor-field">
           @Html.DropDownListFor(model => model.tipo_carroceria, (SelectList)ViewBag.carroceria)
        </div>

        <div class="editor-label">
            @Html.Label("Valor de")
        </div>
        <div class="editor-field">
           @Html.DropDownListFor(model => model.valor1, (SelectList)ViewBag.valor)
        </div>
        <div class="editor-label">
            @Html.Label("Valor até")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.valor2, (SelectList)ViewBag.valor)
        </div>

        <div class="editor-label">
            @Html.Label("De ano")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ano1, (SelectList)ViewBag.ano)
        </div>

        <div class="editor-label">
            @Html.Label("Até ano")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ano2, (SelectList)ViewBag.ano)
        </div>



      <p>
            <input type="submit" value="Continuar" />
        </p>
    </fieldset>
}

